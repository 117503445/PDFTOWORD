<Window x:Class="PDFTOWORD.WdEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFTOWORD"
        mc:Ignorable="d"
        Title="WdEdit" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ScrollViewer Name="Scv" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled"  PanningMode="HorizontalOnly" PreviewMouseWheel="Scv_PreviewMouseWheel"  >
            <Grid Name="G">
                <Image Name="Img" MouseDown="Img_MouseDown" ScrollViewer.VerticalScrollBarVisibility="Disabled" ></Image>
            </Grid>
            
        </ScrollViewer>
    </Grid>
</Window>
